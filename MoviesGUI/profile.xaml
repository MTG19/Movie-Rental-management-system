<Window x:Class="MoviesGUI.profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesGUI"
        mc:Ignorable="d"
        Title="Profile" Height="500" Width="800" Background="#f5f5f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- User Info -->
        <GroupBox Header="User Information" FontWeight="Bold" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,0">
                    <TextBlock Text="Name:" Margin="0,0,0,10"/>
                    <TextBlock Text="Email:" Margin="0,0,0,10"/>
                    <TextBlock Text="Phone:" Margin="0,0,0,10"/>
                    <TextBlock Text="Address:"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Name}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Email}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Phone}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Address}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Subscription Info -->
        <GroupBox Header="Subscription Details" Grid.Row="1" FontWeight="Bold" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,0">
                    <TextBlock Text="Subscribing Date:" Margin="0,0,0,10"/>
                    <TextBlock Text="End Date:" Margin="0,0,0,10"/>
                    <TextBlock Text="Prepaid Months:"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="{Binding SubscribingDate}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding EndDate}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding PrepaidMonths}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Rented Movies -->
        <GroupBox Header="Rented Movies" Grid.Row="2" FontWeight="Bold" Padding="10">
            <ListView ItemsSource="{Binding RentedMovies}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Rented Date" DisplayMemberBinding="{Binding RentedDate}" Width="120"/>
                        <GridViewColumn Header="Return Date" DisplayMemberBinding="{Binding ReturnDate}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>
