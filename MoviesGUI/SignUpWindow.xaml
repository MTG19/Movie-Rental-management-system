<Window x:Class="MoviesGUI.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesGUI"
        mc:Ignorable="d"
        
        Title="Sign UP" Height="500" Width="777">

    <Grid  Margin="10">
        <TextBlock HorizontalAlignment="Left" Margin="69,55,0,0"
               TextWrapping="Wrap" Text="Sign Up" FontSize="30" 
               FontWeight="Bold"  VerticalAlignment="Top"
               Height="52" Width="119"/>


        <TextBlock HorizontalAlignment="Left" Margin="71,119,0,0"
                 TextWrapping="Wrap" Text="Full Name" 
                 VerticalAlignment="Top" Height="21" Width="119"/>
        <TextBox HorizontalAlignment="Left" Margin="71,137,0,0"
                VerticalAlignment="Top" Width="260" Height="23"
                Name="txtfirstN" />


        <TextBlock HorizontalAlignment="Left" Margin="71,170,0,0"
          TextWrapping="Wrap" Text="Username" 
          VerticalAlignment="Top" Height="21" Width="119"/>
        <TextBox HorizontalAlignment="Left" Margin="71,188,0,0"
         VerticalAlignment="Top" Width="260" Height="23"
         Name="txtusername" />

        <TextBlock HorizontalAlignment="Left" Margin="71,220,0,0"
         TextWrapping="Wrap" Text="Email" 
         VerticalAlignment="Top" Height="21" Width="119"/>
        <TextBox HorizontalAlignment="Left" Margin="71,238,0,0"
        VerticalAlignment="Top" Width="260" Height="23"
        Name="txtemail" />


        <TextBlock HorizontalAlignment="Left" Margin="71,268,0,0"
        TextWrapping="Wrap" Text="Password" 
        VerticalAlignment="Top" Height="21" Width="119"/>
        <PasswordBox HorizontalAlignment="Left" Margin="71,286,0,0"
                VerticalAlignment="Top" Width="260" Height="23"
                Name="txtPassword"/>

        <TextBlock HorizontalAlignment="Left" Margin="71,315,0,0"
        TextWrapping="Wrap" Text="Confirm Password" 
        VerticalAlignment="Top" Height="21" Width="119"/>
        <PasswordBox HorizontalAlignment="Left" Margin="71,333,0,0"
            VerticalAlignment="Top" Width="260" Height="23"
            Name="txtconfpass"/>


        <Button HorizontalAlignment="Left" Margin="71,373,0,0" Background="#D9ECFF"
            VerticalAlignment="Top" Width="119" Height="36"
            Name="btnSignIn" Content="Sign Up" Click="btnSignIn_Click" Cursor="Hand"/>

        <TextBlock HorizontalAlignment="Left" Margin="73,416,0,0"
               TextWrapping="Wrap" Text="Do have an account?" 
               VerticalAlignment="Top" Height="52" Width="144"/>
        <Button Content="Sign In" HorizontalAlignment="Left" 
            Margin="190,414,0,0" VerticalAlignment="Top" 
            Background="White" BorderBrush="White" Name="SIgnInUP" Click="SIgnInUP_Click" Cursor="Hand" />

    </Grid>
</Window>
