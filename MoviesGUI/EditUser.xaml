<Window x:Class="MoviesGUI.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Name:" Margin="0,5,0,0"/>
            <TextBox x:Name="NameBox" Margin="0,0,0,5"/>

            <TextBlock Text="Email:" Margin="0,5,0,0"/>
            <TextBox x:Name="EmailBox" Margin="0,0,0,5"/>

            <TextBlock Text="Phone:" Margin="0,5,0,0"/>
            <TextBox x:Name="PhoneBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="75" Margin="5" Click="Save_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
