<Window x:Class="MoviesGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="500" Width="777">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <!-- Sign In Form -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Sign In" FontSize="30" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" />

            <TextBlock Text="Email" />
            <TextBox Name="txtEmail" Margin="0,5,0,10" />

            <TextBlock Text="Password" />
            <PasswordBox Name="txtPassword" Margin="0,5,0,20" />

            <Button Content="Sign In" Width="100" Height="30" Background="#D9ECFF" Click="btnSignIn_Click" Cursor="Hand" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Don't have an account?" />
                <Button Content="Sign Up" Background="White" BorderBrush="White" Click="SignUpIN_Click" Cursor="Hand" />
            </StackPanel>
        </StackPanel>

        <!-- Optional Image Panel (can use your logo here) -->
        <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="200" Width="200">
            <Image Source="images/logo.png" Width="200" Height="200" />
        </Grid>
    </Grid>
</Window>
