<Window x:Class="MoviesGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesGUI"
        mc:Ignorable="d"

    Title="Sign In" Height="500" Width="777">
    <Grid  Margin="10">
        <TextBlock HorizontalAlignment="Left" Margin="69,55,0,0"
                   TextWrapping="Wrap" Text="Sign In" FontSize="30" 
                   FontWeight="Bold"  VerticalAlignment="Top"
                   Height="52" Width="119"/>
        <TextBlock HorizontalAlignment="Left" Margin="97,119,0,0"
                     TextWrapping="Wrap" Text="Email" 
                     VerticalAlignment="Top" Height="21" Width="119"/>
        <TextBox HorizontalAlignment="Left" Margin="97,138,0,0"
                    VerticalAlignment="Top" Width="260" Height="23"
                    Name="txtEmail" />

        <TextBlock HorizontalAlignment="Left" Margin="97,161,0,0"
            TextWrapping="Wrap" Text="Password" 
            VerticalAlignment="Top" Height="21" Width="119"/>
        <PasswordBox HorizontalAlignment="Left" Margin="97,179,0,0"
                    VerticalAlignment="Top" Width="260" Height="23"
                    Name="txtPassword"/>
        <Button HorizontalAlignment="Left" Margin="97,212,0,0" Background="#D9ECFF"
                VerticalAlignment="Top" Width="119" Height="36"
                Name="btnSignIn" Content="Sign In" Click="btnSignIn_Click" Cursor="Hand"/>

        <TextBlock HorizontalAlignment="Left" Margin="97,272,0,0"
                   TextWrapping="Wrap" Text="Don't have an account?" 
                   VerticalAlignment="Top" Height="52" Width="144"/>
        <Button Content="Sign Up" HorizontalAlignment="Left" 
                Margin="240,272,0,0" VerticalAlignment="Top" 
                Background="White" BorderBrush="White" Name="SignUpIN" Click="SignUpIN_Click" Cursor="Hand"/> 

    </Grid>
    
    
</Window>
